<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:background="@drawable/top_login"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wirelessnow_logo_white" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="@string/signupnow"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="@string/create_acccount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/round_edittext"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/yourname"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/round_edittext"
                    android:drawableLeft="@drawable/pass"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/pass"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/round_edittext"
                    android:drawableLeft="@drawable/pass"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/conpass"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/round_edittext"
                    android:drawableLeft="@drawable/ssn"
                    android:drawablePadding="@dimen/_8sdp"
                    android:hint="@string/ssn_number"
                    android:inputType="number"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/round_edittext"
                    android:drawableLeft="@drawable/ic_calender"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/dob_"
                    android:inputType="date"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/round_edittext"
                    android:drawableLeft="@drawable/ic_enrol"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/enroll"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/round_edittext"
                    android:drawableLeft="@drawable/ic_enrol"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/agent_id"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black" />


                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/round_login_button"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="#CFCFCF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_user"
                        android:textColor="#535353"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="@string/log"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>